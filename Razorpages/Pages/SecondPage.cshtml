@page
@model Razorpages.Pages.SecondPageModel
@{
	ViewData["Title"] = "SecondPage";
}

<h2>SecondPage to go back to Index with date value</h2>


<div class="container">
	<form asp-page-handler="BackToIndex" method="post">
		<input type="hidden" name="SomeAwesomeDate" id="SomeAwesomeDate" value="@Model.SomeAwesomeDate"/>

		<div class="row">
			<div class="col">
				<label asp-for="SomeAwesomeDate" class="control-label"></label> : @Model.SomeAwesomeDate
			</div>
			<span asp-validation-for="SomeAwesomeDate" class="text-danger"></span>
			<button class="btn btn-default">Back to Index</button>
		</div>

	</form>
</div>
